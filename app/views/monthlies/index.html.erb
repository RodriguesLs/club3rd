<p id="notice"><%= notice %></p>

<h1>Monthlies</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Price</th>
      <th>Date</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monthlies.each do |monthly| %>
      <tr>
        <td><%= monthly.status %></td>
        <td><%= monthly.price %></td>
        <td><%= monthly.date %></td>
        <td><%= monthly.customer_id %></td>
        <td><%= link_to 'Show', monthly %></td>
        <td><%= link_to 'Edit', edit_monthly_path(monthly) %></td>
        <td><%= link_to 'Destroy', monthly, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


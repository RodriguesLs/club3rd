    </div>
    <div class='col s3'>
      <%= form.label :cpf, 'CPF' %>
      <%= form.text_field :cpf, placeholder:'CPF', class:'' %>
    </div>
  </div>

  <div class='row'>
    <div class='col s3'>
      <%= form.label :phone %>
      <%= form.text_field :phone, placeholder:'(99) 9998-9999' %>
    </div>
    <div class='col s3'>
      <%= form.label :mobile_phone %>
      <%= form.text_field :mobile_phone, class:'form-control', placeholder:'(99) 98888-8888' %>
    </div>
    <div class='col s3'>
      <%= form.label :date_of_birth %>
      <%= form.text_field :date_of_birth, class:'datepicker' %>
    </div>
    <div class='col s3'>
      <label>
        <%= form.check_box :status %>
        <span>Ativo</span>
      </label>
    </div>
  </div>
  
  
  
  <%= form.fields_for :address do |ad| %>
      
    <div class='row'>
      <div class='col s6'>
        <%= ad.label :street, 'Rua' %>
        <%= ad.text_field :street, placeholder:'Av. Brooklin' %>

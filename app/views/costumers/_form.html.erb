        <%= ad.text_field :complement %>
      </div>
    </div>
    <div class='row'>
      <div class='col s3'>
        <%= ad.label :district, 'Bairro' %>
        <%= ad.text_field :district %>
      </div>
      <div class='col s3'>
        <%= ad.label :city, 'Cidade' %>
        <%= ad.text_field :city %>
      </div>
      <div class='col s3'>
        <%= ad.label :state %>
        <%= ad.text_field :state %>
      </div>
      <div class='col s3'>
        <%= ad.label :cep%>
        <%= ad.text_field :cep%>

<p id="notice"><%= notice %></p>

<h1>Associados</h1>

<table class='striped'>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Status</th>
      <th>RG</th>
      <th>CPF</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th>Nascimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @costumers.each do |costumer| %>
      <tr>
        <td><%= costumer.name %></td>
        <td><%= I18n.t costumer.status %></td>
        <td><%= rg_format(costumer.rg) %></td>
        <td><%= cpf_format(costumer.cpf) %></td>
        <td><%= phone_format(costumer.phone) %></td>
        <td><%= phone_format(costumer.mobile_phone) %></td>
        <td><%= I18n.l costumer.date_of_birth, format: :long %></td>
        <td><%= link_to 'Edit', edit_costumer_path(costumer) %></td>
        <!-- <td><%#= link_to 'Show', costumer %></td>
        <td><%#= link_to 'Destroy', costumer, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar associado', new_costumer_path, class: 'btn btn-dark btn-color-white' %>

<p id="notice"><%= notice %></p>

<h1>Associados</h1>

<table class='striped'>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Status</th>
      <th>RG</th>
      <th>CPF</th>
      <th>Telefone</th>
      <th>Celular</th>
      <th>Nascimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @costumers.each do |costumer| %>
      <tr>
        <td><%= costumer.name %></td>
        <td><%= costumer.status %></td>
        <td><%= costumer.rg %></td>
        <td><%= costumer.cpf %></td>
        <td><%= costumer.phone %></td>
        <td><%= costumer.mobile_phone %></td>
        <td><%= costumer.date_of_birth %></td>
        <td><%= link_to 'Show', costumer %></td>
        <td><%= link_to 'Edit', edit_costumer_path(costumer) %></td>
        <td><%= link_to 'Destroy', costumer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar associado', new_costumer_path, class: 'btn btn-dark btn-color-white' %>

<p id="notice"><%= notice %></p>

<h1>Costumers</h1>

<table class='table'>
  <thead>
    <tr>
      <th scope='col'>Nome</th>
      <th scope='col'>Status</th>
      <th scope='col'>RG</th>
      <th scope='col'>CPF</th>
      <th scope='col'>Telefone</th>
      <th scope='col'>Celular</th>
      <th scope='col'>Nascimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @costumers.each do |costumer| %>
      <tr scope='row'>
        <td><%= costumer.name %></td>
        <td><%= costumer.status %></td>
        <td><%= costumer.rg %></td>
        <td><%= costumer.cpf %></td>
        <td><%= costumer.phone %></td>
        <td><%= costumer.mobile_phone %></td>
        <td><%= costumer.date_of_birth %></td>
        <td><%= link_to 'Show', costumer %></td>
        <td><%= link_to 'Edit', edit_costumer_path(costumer) %></td>
        <td><%= link_to 'Destroy', costumer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar associado', new_costumer_path, class: 'btn btn-dark' %>

<p id="notice"><%= notice %></p>

<h1>Streets</h1>

<table>
  <thead>
    <tr>
      <th>District</th>
      <th>Number</th>
      <th>Complement</th>
      <th>Cep</th>
      <th>State</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @streets.each do |street| %>
      <tr>
        <td><%= street.district %></td>
        <td><%= street.number %></td>
        <td><%= street.complement %></td>
        <td><%= street.cep %></td>
        <td><%= street.state %></td>
        <td><%= street.customer_id %></td>
        <td><%= link_to 'Show', street %></td>
        <td><%= link_to 'Edit', edit_street_path(street) %></td>
        <td><%= link_to 'Destroy', street, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Street', new_street_path %>
